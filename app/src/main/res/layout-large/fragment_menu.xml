<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <RelativeLayout
                    android:id="@+id/cathot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:id="@+id/hotpic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/cathot"
                        android:clickable="false"
                        />
                    <TextView
                        android:id="@+id/cathottxt"
                         android:layout_below="@+id/hotpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Горячее"
                        android:textColor="#000"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:clickable="false"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/catsnack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:clickable="false"
                        android:id="@+id/snackpic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/catsnack"
                        />
                    <TextView
                        android:id="@+id/catsnacktxt"
                        android:clickable="false"
                        android:layout_below="@+id/snackpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Закуски"
                        android:textColor="#000"
                        android:textSize="26sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/catbreak"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:clickable="false"
                        android:id="@+id/breakpic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/catbreak"
                        />
                    <TextView
                        android:id="@+id/catbreaktxt"
                        android:clickable="false"
                        android:layout_below="@+id/breakpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Завтраки"
                        android:textColor="#000"
                        android:textSize="26sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/catdes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:clickable="false"
                        android:id="@+id/despic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/catdes"
                        />
                    <TextView
                        android:id="@+id/catdestxt"
                        android:clickable="false"
                        android:layout_below="@+id/despic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Десерты"
                        android:textColor="#000"
                        android:textSize="26sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/catfav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:background="@drawable/menuitembg"
                    >
                    <RelativeLayout
                        android:id="@+id/favpiccontainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:clickable="false"
                            android:id="@+id/favpic"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/advice"
                            android:scaleType="centerInside"
                            />

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/catfavtxt"
                        android:clickable="false"
                        android:layout_below="@+id/favpiccontainer"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Советы"
                        android:textColor="#000"
                        android:textSize="26sp"
                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <RelativeLayout
                    android:id="@+id/catsoup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:clickable="false"
                        android:id="@+id/souppic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/catsoup"

                        />
                    <TextView
                        android:id="@+id/catsouptxt"
                        android:clickable="false"
                        android:layout_below="@+id/souppic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Супы"
                        android:textColor="#000"
                        android:textSize="26sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/catsld"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:clickable="false"
                        android:id="@+id/sldpic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/catsld"

                        />
                    <TextView
                        android:id="@+id/catsldtxt"
                        android:clickable="false"
                        android:layout_below="@+id/sldpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Салаты"

                        android:textColor="#000"
                        android:textSize="26sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/catsauce"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:clickable="false"
                        android:id="@+id/saucepic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/catsauce"

                        />
                    <TextView
                        android:id="@+id/catsaucetxt"
                        android:clickable="false"
                        android:layout_below="@+id/saucepic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Соусы"
                        android:textColor="#000"
                        android:textSize="26sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/catdrink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:clickable="false"
                        android:id="@+id/drinkpic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/catdrink"
                        />
                    <TextView
                        android:id="@+id/catdrinktxt"
                        android:clickable="false"
                        android:layout_below="@+id/drinkpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Напитки"
                        android:textColor="#000"
                        android:textSize="26sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/catforum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/menuitembg"
                    >
                    <ImageView
                        android:clickable="false"
                        android:id="@+id/forumpic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/catforum"
                        />
                    <TextView
                        android:id="@+id/catforumtxt"
                        android:clickable="false"
                        android:layout_below="@+id/forumpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Форум"
                        android:textColor="#000"
                        android:textSize="26sp"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>